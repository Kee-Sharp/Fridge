<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fridge" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lgreen</item>
        <item name="colorPrimaryDark">@color/dgreen</item>
        <item name="colorAccent">@color/yellow</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Fridge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fridge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fridge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>