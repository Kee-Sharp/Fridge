<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fridge" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dgreen</item>
        <item name="colorPrimaryDark">@color/dgreen</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="materialButtonStyle">@style/Widget.Fridge.Button</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Fridge.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fridge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fridge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Fridge.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/grey</item>
    </style>

    <style name="Widget.Fridge.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dgreen</item>
    </style>
</resources>